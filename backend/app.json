{
  "name": "ai-tools-hub-backend",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "value": "production"
    },
    "NPM_CONFIG_PRODUCTION": {
      "value": "false"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "eco"
    }
  },
  "addons": [
    {
      "plan": "mongolab:sandbox"
    }
  ],
  "scripts": {
    "postdeploy": "echo 'Deployment successful!'"
  }
}
